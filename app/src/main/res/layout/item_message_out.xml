<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="2dp">

    <RelativeLayout
        android:id="@+id/rlBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_message_solid"
        android:minHeight="36dp">

        <TextView
            android:id="@+id/tvBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="7dp"
            android:maxWidth="270dp"
            android:textColor="@color/textLight"
            android:textSize="15sp"
            tools:text="hello its me you lookin fo" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rlBody"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@+id/rlBody"
        android:gravity="end"
        android:textColor="@color/textLightSecondary"
        android:textSize="11sp"
        tools:text="21.01.2017 11:34" />

</RelativeLayout>